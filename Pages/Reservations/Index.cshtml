@model Kolumban_Brigitta_Proiect.Pages.Reservations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].CheckInDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].CheckOutDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reservation[0].Guest)
            </th>
            <th>@Html.DisplayNameFor(model => model.Reservation[0].Guest.Phone)</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Reservation) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CheckInDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckOutDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.RoomNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guest.Name)
            </td>
             <td>
                 @Html.DisplayFor(modelItem=>item.Guest.Phone)
             </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
