@page
@model Kolumban_Brigitta_Proiect.Pages.Reservations.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Reservation.CheckInDate" class="control-label"></label>
                <input asp-for="Reservation.CheckInDate" class="form-control" aria-required="true"/>
                <span asp-validation-for="Reservation.CheckInDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Reservation.CheckOutDate" class="control-label"></label>
                <input asp-for="Reservation.CheckOutDate" class="form-control" aria-required="true"/>
                <span asp-validation-for="Reservation.CheckOutDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.RoomId" class="control-label"></label>
                <select asp-for="Reservation.RoomId"
                        class="form-control"
                        asp-items="ViewBag.RoomId">
                    <option value="">-- select room --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.GuestId" class="control-label"></label>
                <select asp-for="Reservation.GuestId"
                        class="form-control"
                        asp-items="ViewBag.GuestId">
                    <option value="">-- select guest --</option>
                </select>
                <span asp-validation-for="Reservation.GuestId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
