@page
@model Kolumban_Brigitta_Proiect.Pages.Reservations.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Reservation</h4>
    <hr />
    <dl class="row">

        <!-- Reservation -->
        <dt class="col-sm-2">Check-in Date</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model=>model.Reservation.CheckInDate)
        </dd>

        <dt class="col-sm-2">Check-out Date</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model=>model.Reservation.CheckOutDate)
        </dd>

        <!-- Room -->
        <dt class="col-sm-2">Room Number</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model=>model.Reservation.Room.RoomNumber)
        </dd>

        <dt class="col-sm-2">Price per Night</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model=>model.Reservation.Room.PricePerNight)
        </dd>

        <dt class="col-sm-2">Hotel</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model=>model.Reservation.Room.Hotel.Name)
        </dd>

        <!-- Guest -->
        <dt class="col-sm-2">Guest Name</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model=>model.Reservation.Guest.Name)
        </dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model=>model.Reservation.Guest.Email)
        </dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model=>model.Reservation.Guest.Phone)
        </dd>

    </dl>

</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Reservation.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
